@using StoreOnline.Models
@using PagedList.Mvc;
@model PagedList.PagedList<SANPHAM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<body>
    <div style="background-size:cover; background-position:center center; background-image: url('../../images/logo-Copy.jpg')">
        <div class="container">
            <div class="banner-info">
                <h3 style="color: transparent">
                    '
                </h3>
                <div class="search-form">
                    <form action="#" method="post">
                        <input type="text" value="Search" name="Search" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search';}" required="">
                        <input type="submit" value=" ">
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!--San Pham-->
    <div class="content-top ">
        <div class="container ">
            <div class="spec ">
                <h3>Đặc Sản Nổi Bật</h3>
                <div class="ser-t">
                    <b></b>
                    <span><i></i></span>
                    <b class="line"></b>
                </div>
            </div>
            <div class="row">
                @foreach (var sanpham in Model)
                {
                    <div class="col-sm-4 col-lg-3 col-md-4 pro-1">
                        <div class="thumbnail col-m">
                            <a href="@Url.Action("Details", "Shoponline", new { masp = @sanpham.HINHANH })" data-toggle="modal" data-target="#myModal1" class="offer-img">
                                <img alt="@sanpham.TENSP" src="~/images/sanpham/@sanpham.HINHANH" sizes="auto" class="img-responsive">
                                <div class="offer"><p><span>@sanpham.LOAI</span></p></div>
                            </a>
                            <div class="mid-1">
                                <div style="height:30px">
                                    <h6><a href="@Url.Action("Details", "Shoponline", new { masp = @sanpham.MASP })">@sanpham.TENSP</a></h6>
                                </div>
                                <div class="mid-2">
                                    <p><em class="item_price">@sanpham.GIABAN<span> VNĐ</span></em></p>
                                    <div class="block"></div>
                                    <div class="clearfix"></div>
                                </div>
                                <div>
                                    <div class="add add-3">
                                        @*<button class="btn btn-danger my-cart-btn my-cart-b ">*@
                                            <a href="@Url.Action("ThemGiohang", "GioHang", new { @iMasp= sanpham.MASP, @strURL=Request.Url.ToString() })">
                                                    <p style="color:black" class="btn btn-danger my-cart-btn my-cart-b">ĐẶT MUA</p>
                                            </a>
                                        @*</button>*@
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div>
                <ul class="pagination pagination-lg">
                    <li>
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
                    </li>
                </ul>
            </div>
        </div>
    </div>

</body>