@model IEnumerable<StoreOnline.Models.DONDATHANG>

@{
    ViewBag.Title = "Dondathang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br />
<br />
<br />
<br />
<h2>Đơn Đặt Hàng Mới Nhất</h2>

<table class="table" border="1">
    <tr>
        <th>
            Mã Đơn Hàng
        </th>
        <th>
            Mã KH
        </th>
        <th>
            Tên Khách Hàng
        </th>
        <th>
            Tình Trạng Thanh Toán
        </th>
        <th>
            Tình Trạng Giao
        </th>
        <th>
            Ngày Đặt
        </th>
        <th>
            Ngày Giao
        </th>
        <th>
            Thành Tiền
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="@Url.Action("Chitietdondathang", "Admin", new { mahd = item.MAHD})">@item.MAHD</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MAKH)
        </td>
        <td>
            @item.KHACHHANG.TENKH
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DATHANHTOAN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TINHTRANGGIAO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NGAYDAT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NGAYGIAO)
        </td>
        <td>
            @String.Format("{0:0,0}", item.THANHTIEN) VNĐ
        </td>
        <td>

            @Html.ActionLink("Chi Tiết", "Chitietdondathang", new { mahd = item.MAHD })
        </td>
    </tr>
}

</table>
