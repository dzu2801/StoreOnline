@using StoreOnline.Models
@model List<Giohang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="banner-top">
    <div class="container">
        <h3>Thông Tin Giỏ Hàng</h3>
        <h4><a href="@Url.Action("Index", "Shoponline")">Trang Chủ</a><label>/</label>Thông Tin Giỏ Hàng</h4>
        <div class="clearfix"> </div>
    </div>
</div>
<table align="center" border="1">
    <tr style="text-align:center; font-weight:bold">
        <td>  Mã Sản Phẩm </td>
        <td> Tên sản phẩm </td>
        <td> Ảnh sản phẩm </td>
        <td> Số lượng </td>
        <td> Đơn giá </td>
        <td> Thành tiền </td>
        <td width="50px"></td>
        <td width="50px"></td>
        @*1 dong cho chi tiết*@
        @*<td width="50px"></td>*@
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center; font-weight:bold">
            <td> @item.iMasp </td>
            <td><a href="@Url.Action("Details", "Shoponline", new { masp = item.iMasp })">@item.sTensp</a></td>
            <td><img src="~/images/sanpham/@item.sAnhsp" width="70px" height="70px"></td>
            @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { @iMaSp = item.iMasp }))
            {
                <td>
                    <input type="number" min="1" name="txtSoluong" value="@item.iSoluong" style="text-align:center" />
                </td>
                <td>@String.Format("{0:0,0}", item.dDongia) </td>
                <td>@String.Format("{0:0,0}", item.dThanhtien) </td>
                @*<td> <a href="@Url.Action("Details", "Shoponline", new { id = item.iMasp})"> Chi tiết </a></td>*@
                <td> <span style="color:red">@Html.ActionLink("Xóa", "XoaGiohang", new { @iMaSp = item.iMasp })</span></td>
                <td> <input type="submit" value="Cập Nhật" style="color:blue" /></td>
            }
        </tr>
    }
    <tr style="font-weight: bold; text-align:right; color:red">
        <td colspan="4"> Số lượng sản phẩm: @ViewBag.Tongsoluong </td>
        <td colspan="5"> Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien) VNĐ </td>
    </tr>
    <tr style="font-weight: bold; color:blue; text-align:right ">
        <td colspan="9">
            @Html.ActionLink("Xóa Giỏ Hàng", "XoaTatcaGiohang")
        </td>
    </tr>
</table>


