
@{
    ViewBag.Title = "Resetpassword";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}



<div class="banner-top">
    <div class="container">
        <h3>Reset Mật Khẩu</h3>
        <h4><a href="@Url.Action("Index", "Shoponline")">Trang Chủ</a><label>/</label>Reset Mật Khẩu</h4>
        <div class="clearfix"> </div>
    </div>
</div>
<!--login-->

<div class="login">

    <div class="main-agileits">
        <div class="form-w3agile">
            <h3>Reset Mật Khẩu</h3>
            @ViewData["loi3"]
            <form action="#" method="post">
                @ViewData["loi1"]
                <div class="key">
                    <i class="fa fa-lock" aria-hidden="true"></i>
                    <input type="password" value="Password" name="Password" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Password';}" required="">
                    <div class="clearfix"></div>
                </div>
                @ViewData["loi2"]
                <div class="key">
                    <i class="fa fa-lock" aria-hidden="true"></i>
                    <input type="password" value="Confirm Password" name="Confirm Password" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Confirm Password';}" required="">
                    <div class="clearfix"></div>
                </div>
                <input type="submit" value="Xác Nhận">
            </form>
        </div>
    </div>
</div>

